                    </div>
                </div>
            </div>

            <div class="wrapper wrapper-content">

                <div class="row">
                    <div class="col-md-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Tickets vigentes</h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                                                <i class="fa fa-chevron-up"></i>
                                                            </a>



                                </div>
                            </div>
                            <div class="ibox-content">

                                <div class="table-responsive">
                                    <table id="Tickets" class="footable table table-stripped toggle-arrow-tiny" data-page-size="10">
                                        <thead>
                                            <tr>
                                                <th data-toggle="all">Número</th>
                                                <th data-toggle="phone">Cliente</th>

                                                <th data-hide="phone">Creado por:</th>
                                                <th data-hide="phone">Fecha</th>
                                                <th data-hide="phone">Hora</th>
                                                <th data-hide="all">Description</th>
                                                <th data-hide="phone">Asunto</th>
                                                <th data-hide="phone">Prioridad</th>
                                                <th data-hide="phone">Tipo</th>
                                                <th class="text-right" data-sort-ignore="true">Acción</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr w3-repeat="tickets">
                                                <td>{{id}}</td>
                                                <td>{{client}}</td>

                                                <td>{{username}}</td>
                                                <td>{{date}}</td>
                                                <td>{{time}}</td>
                                                <td> {{description}}</td>
                                                <td>{{subject}}</td>
                                                <td>
                                                    <span class="label label-{{priority}}">{{name}}</span>
                                                </td>
                                                <td><span class="label label-{{type}}">{{tipo}}</span></td>
                                                <td class="text-right">
