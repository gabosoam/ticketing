    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 150
            });
            $('.summernote2').summernote({
                height: 400
            });
            refreshTicket();
        });

        $('#saveTicket').click(function () {
            var data = $('#formAdd').serialize();
            $.post("/ticket", data, function (data) {
                if (data.affectedRows == 1) {
                    location.href = "/";

                } else {
                    alert('Existio un error');
                }

            });
        });

        $('#saveIncidence').click(function () {
            var data = $('#formIncidence').serialize();
            $.post("/incidence", data, function (data) {
                if (data.affectedRows == 1) {
                    location.href = "/";

                } else {
                    alert('Existio un error');
                }

            });

        });



        function refreshTicket() {
            $.get("/tickets/<%= user.id%>", function (data) {
                w3.displayObject("Tickets", { tickets: data });
                $('.footable').footable();

            });

            $.get("/client", function (data) {
                w3.displayObject("Clients", { clients: data });
            });


        }

        function openIns(ticket) {
            $.get("/ticket/" + ticket, function (tickets) {
                $("#txtDesc").html(tickets[0].description);
                $("#txtTicket").val(tickets[0].id);

            });

            $.get("/incidence/" + ticket, function (data) {
                w3.displayObject("Incidences", { incidences: data });

                $("#modalIns").modal();
            });


        }
    </script>


